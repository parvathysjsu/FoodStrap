<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/custom.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }
    </style>
    <!-- Font Icon
    <link rel="stylesheet" href="css/material-design-iconic-font.min.css">     
    <link rel="stylesheet" href="css/style.css"> -->
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header logobg">
                <a class="navbar-brand" href="/"><img class="logoimage" src="img/logo.JPG"></a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/">HOME</a></li>
                <li><a href="/problem">THE PROBLEM</a></li>
                <li><a href="/donors">DONATE FOOD</a></li>
                <li><a href="/shelters">RECIEVE FOOD</a></li>
                <li><a href="/volunteers">VOLUNTEER</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/signin">Sign In</a></li>
            </ul>
        </div>
    </nav>
    <div class="container bgBrown">
        <div>
            <div class="sectionDivider55">
                <img class="imgWidth" src="img/signup.jpg">
            </div>
            <div class="sectionDivider45">
                <form id="signup-form" action="/signup" method="post">                    
                    <div id="basicFields" style="display:block;">
                        <div class="form-group form-input">
                            <div class="select-list">
                                <select name="usertype" id="usertype" required onchange="changeForm(this.value)">
                                    <option value="">User Type</option>
                                    <option value="restaurant">Restaurant</option>
                                    <option value="shelter">Shelter</option>
                                    <option value="volunteer">Volunteer</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="username" id="username" value="" required />
                            <label for="username" class="form-label">Username</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="password" name="pass" id="pass" value="" required />
                            <label for="pass" class="form-label">Password</label>
                        </div>
                    </div> 
                    <div id= "restaurantForm" style="display:none;">
                        <div class="form-group form-input">
                            <input type="text" name="rname" id="rname" value="" />
                            <label for="rname" class="form-label">Restaurant name</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="rcuisine" id="rcuisine" value="" />
                            <label for="rcuisine" class="form-label">Restaurant cuisine</label>
                        </div>
                        <div class="form-group form-input ">
                            <input type="number" name="rphone" id="rphone" value="" />
                            <label for="rphone" class="form-label">Restaurant phone number</label>
                        </div>
                        <div class="form-group form-input ">
                            <input type="email" name="remailid" id="remailid" value="" />
                            <label for="remailid" class="form-label">Restaurant email id</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="raddr" id="raddr" value="" />
                            <label for="raddr" class="form-label">Address line 1</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="rcity" id="rcity" value="" />
                            <label for="rcity" class="form-label">City</label>
                        </div>
                        <div class="form-group form-input col-md-6">
                            <input type="text" name="rstate" id="rstate" value="" />
                            <label for="rstate" class="form-label">State</label>
                        </div>
                        <div class="form-group form-input col-md-6">
                            <input type="text" name="rzip" id="rzip" value="" />
                            <label for="rzip" class="form-label">Zip</label>
                        </div>
                    </div>
                    <div id= "shelterForm" style="display:none;">
                        <div class="form-group form-input">
                            <input type="text" name="sname" id="sname" value="" />
                            <label for="sname" class="form-label">Shelter name</label>
                        </div>                       
                        <div class="form-group form-input ">
                            <input type="number" name="sphone" id="sphone" value=""  />
                            <label for="sphone" class="form-label">Shelter phone number</label>
                        </div>
                        <div class="form-group form-input ">
                            <input type="email" name="semailid" id="semailid" value=""  />
                            <label for="semailid" class="form-label">Shelter email id</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="saddr" id="saddr" value=""  />
                            <label for="saddr" class="form-label">Address line 1</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="text" name="scity" id="scity" value=""  />
                            <label for="scity" class="form-label">City</label>
                        </div>
                        <div class="form-group form-input col-md-6">
                            <input type="text" name="sstate" id="sstate" value=""  />
                            <label for="sstate" class="form-label">State</label>
                        </div>
                        <div class="form-group form-input col-md-6">
                            <input type="text" name="szip" id="szip" value=""  />
                            <label for="szip" class="form-label">Zip</label>
                        </div>
                    </div>
                    <div id= "volunteerForm" style="display:none;">
                        <div class="form-group form-input">
                            <input type="text" name="name" id="name" value=""  />
                            <label for="name" class="form-label">Your name</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="number" name="phone" id="phone" value=""  />
                            <label for="phone" class="form-label">Your phone number</label>
                        </div>
                        <div class="form-group form-input">
                            <input type="email" name="emailid" id="emailid" value=""  />
                            <label for="emailid" class="form-label">Your email id</label>
                        </div>
                    </div>
                                                          

                    <div class="form-submit">
                        <a href="/signup" class="vertify-booking"><input type="submit" value="Sign Up" class="submit"
                                id="submit" name="submit" /></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        function changeForm(val) {
          if(val =="restaurant"){
            document.getElementById("restaurantForm").style.display = "block";
            document.getElementById("shelterForm").style.display = "none";
            document.getElementById("volunteerForm").style.display = "none";
          }
          if(val =="shelter"){
            document.getElementById("restaurantForm").style.display = "none";
            document.getElementById("shelterForm").style.display = "block";
            document.getElementById("volunteerForm").style.display = "none";
          }
          if(val =="volunteer"){
            document.getElementById("restaurantForm").style.display = "none";
            document.getElementById("shelterForm").style.display = "none";
            document.getElementById("volunteerForm").style.display = "block";
          }
          if(val ==""){
            document.getElementById("restaurantForm").style.display = "none";
            document.getElementById("shelterForm").style.display = "none";
            document.getElementById("volunteerForm").style.display = "none";
          }
        }
        </script>
        
</body>

</html>