<!DOCTYPE html>
<html lang="en">

<head>
    <title><%= msgs.dashboard %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/custom.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!--    <div class="navbar-header">
            <a class="navbar-brand" href="/"><img class="logoimage" src="img/logo.JPG"></a>
          </div>-->
          <ul class="nav navbar-nav">
            <li><a class="navbar-brand" href="/"><img class="logoimage" src="img/logo.JPG"></a></li>
            <li><a href="/volunteer_dashboard"> <%= msgs.dashboard %>  </a></li>
            <li><a href="/vol_profile"> <%= msgs.profile %> </a></li>
          </ul>

        </div>
      </nav>
    <div class="container">


        <table id="myTable" class="table table-striped" >
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col"> <%= msgsTable.menu %></th>
                  <th scope="col"> <%= msgsTable.cuisine %></th>
                  <th scope="col"> <%= msgsTable.pcount %></th>
                  <th scope="col"> <%= msgsTable.datetime %></th>
                  <th scope="col"> <%= msgsTable.addr %></th>
                  <th scope="col"> <%= msgsTable.allergyinfo %></th>
                  <th scope="col"> <%= msgsTable.splnotes %></th>
                  <th scope="col"> <%= msgsTable.shelter %></th>
                  <th scope="col"> <%= msgsTable.status %></th>
                  <th scope="col"> </th>
                </tr>
              </thead>
              <tbody>
                  <% for(var item in donList) { %>
                      <tr>
                          <th scope="row"><%= parseInt(item)+1 %></th>
                          <td> <%= donList[item].menu %></td>
                          <td> <%= donList[item].cuisine %></td>
                          <td> <%= donList[item].count %></td>
                          <td> <%= donList[item].pickuptime %></td>
                          <td> <%= donList[item].addr %></td>
                          <td> <%= donList[item].allergy %></td>
                          <td> <%= donList[item].notes %></td>
                          <td> <%= donList[item].shelter %></td>
                          <td> <%= donList[item].status %></td>
                        <!-- <td><a href='<%= donList[item].link %>'><input type="submit" value='<%= msgs.pickup %>' class="submit" id="<%= parseInt(item)+1 %>"
                            name="<%= parseInt(item)+1 %>" /></a></td>-->
                            <td><a href='<%= donList[item].link %>'><input type="submit" value='<%= msgs.pickup %>' class="submit" id="<%= parseInt(item)+1 %>"
                                name="<%= parseInt(item)+1 %>" /></a></td>
                        </tr>
                      <% } %>

              </tbody>
          </table>
      </div>
      <script>
        $(document).ready(function(){
            $('#myTable').dataTable();
        });
        </script>
</body>

</html>
